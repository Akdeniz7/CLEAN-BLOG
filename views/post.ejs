<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1> <%= blog.title %> </h1>
            <span class="meta">Posted by
              <a href="#">Ahmet Sezer Akdeniz</a>
              on <%= blog.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-10 mx-auto">
          <p><%= blog.detail %></p>
        </div>
        <button class="col-3">
          <a href="/blogs/edit/<%= blog._id %>">Update Details</a>
        </button>
        <div class=" col-6">
        </div>

        <a class="col-3 text-center" href="/blogs/<%= blog.id %>?_method=DELETE"
          style=" background-color: red; color: white;border: 2px solid black"
          onclick="return confirm('Are you sure?..')"><span>Delete</span></a>
        </button>
      </div>
    </div>

  <%- include('partials/_footer') -%>

</body>

